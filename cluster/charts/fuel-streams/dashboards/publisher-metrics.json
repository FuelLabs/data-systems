{
    "annotations": {
        "list": [
            {
                "builtIn": 1,
                "datasource": {
                    "type": "grafana",
                    "uid": "-- Grafana --"
                },
                "enable": true,
                "hide": true,
                "iconColor": "rgba(0, 211, 255, 1)",
                "name": "Annotations & Alerts",
                "type": "dashboard"
            },
            {
                "datasource": {
                    "type": "prometheus",
                    "uid": "{{ .context.prometheusDataSource }}"
                },
                "enable": true,
                "expr": "changes(kube_deployment_status_observed_generation{deployment=\"publisher\"}[5m])",
                "iconColor": "#5794F2",
                "name": "Deployments",
                "tagKeys": [
                    "deployment"
                ],
                "titleFormat": "Publisher Deployment"
            }
        ]
    },
    "links": [
        {
            "asDropdown": true,
            "icon": "external-link-alt",
            "includeVars": true,
            "keepTime": true,
            "tags": [
                "fuel-streams"
            ],
            "targetBlank": false,
            "title": "Related Dashboards",
            "type": "dashboards"
        }
    ],
    "panels": [
        {
            "collapsed": false,
            "gridPos": {
                "h": 1,
                "w": 24,
                "x": 0,
                "y": 0
            },
            "title": "Resource Usage",
            "type": "row"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "{{ .context.prometheusDataSource }}"
            },
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "axisLabel": "CPU Cores",
                        "drawStyle": "line",
                        "lineInterpolation": "smooth",
                        "fillOpacity": 20,
                        "spanNulls": false,
                        "scaleDistribution": {
                            "type": "linear"
                        }
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 80
                            },
                            {
                                "color": "red",
                                "value": 90
                            }
                        ]
                    },
                    "unit": "cores"
                }
            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 1
            },
            "targets": [
                {
                    "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{container=\"publisher\", pod=~\"$pod\"}[5m]))",
                    "legendFormat": "{{pod}}"
                }
            ],
            "title": "CPU Usage by Pod [5m]",
            "description": "CPU consumption in cores per pod",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "{{ .context.prometheusDataSource }}"
            },
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "axisLabel": "Memory",
                        "drawStyle": "line",
                        "lineInterpolation": "smooth",
                        "fillOpacity": 20,
                        "spanNulls": false,
                        "scaleDistribution": {
                            "type": "linear"
                        }
                    },
                    "unit": "bytes"
                }
            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 1
            },
            "targets": [
                {
                    "expr": "sum by (pod) (container_memory_working_set_bytes{container=\"publisher\", pod=~\"$pod\"})",
                    "legendFormat": "{{pod}} - usage"
                },
                {
                    "expr": "sum by (pod) (kube_pod_container_resource_limits{container=\"publisher\", pod=~\"$pod\", resource=\"memory\"})",
                    "legendFormat": "{{pod}} - limit"
                }
            ],
            "title": "Memory Usage by Pod",
            "description": "Memory usage and limits per pod",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "{{ .context.prometheusDataSource }}"
            },
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "axisLabel": "Network I/O",
                        "drawStyle": "line",
                        "lineInterpolation": "smooth",
                        "fillOpacity": 20,
                        "spanNulls": false,
                        "scaleDistribution": {
                            "type": "linear"
                        }
                    },
                    "unit": "Bps"
                }
            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 9
            },
            "targets": [
                {
                    "expr": "sum by (pod) (rate(container_network_receive_bytes_total{container=\"publisher\", pod=~\"$pod\"}[5m]))",
                    "legendFormat": "{{pod}} - receive"
                },
                {
                    "expr": "sum by (pod) (rate(container_network_transmit_bytes_total{container=\"publisher\", pod=~\"$pod\"}[5m]))",
                    "legendFormat": "{{pod}} - transmit"
                }
            ],
            "title": "Network I/O by Pod [5m]",
            "description": "Network traffic in/out per pod",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "{{ .context.prometheusDataSource }}"
            },
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "axisLabel": "Percentage",
                        "drawStyle": "line",
                        "lineInterpolation": "smooth",
                        "fillOpacity": 20,
                        "spanNulls": false,
                        "scaleDistribution": {
                            "type": "linear"
                        },
                        "max": 100,
                        "min": 0
                    },
                    "unit": "percent"
                }
            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 9
            },
            "targets": [
                {
                    "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{container=\"publisher\", pod=~\"$pod\"}[5m])) / sum by (pod) (container_spec_cpu_quota{container=\"publisher\", pod=~\"$pod\"}) * 100",
                    "legendFormat": "{{pod}} - CPU %"
                },
                {
                    "expr": "sum by (pod) (container_memory_working_set_bytes{container=\"publisher\", pod=~\"$pod\"}) / sum by (pod) (kube_pod_container_resource_limits{container=\"publisher\", pod=~\"$pod\", resource=\"memory\"}) * 100",
                    "legendFormat": "{{pod}} - Memory %"
                }
            ],
            "title": "Resource Usage Percentage",
            "description": "CPU and Memory usage as percentage of limits",
            "type": "timeseries"
        },
        {
            "collapsed": false,
            "gridPos": {
                "h": 1,
                "w": 24,
                "x": 0,
                "y": 18
            },
            "title": "Message Metrics",
            "type": "row"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "{{ .context.prometheusDataSource }}"
            },
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "axisLabel": "Messages/sec",
                        "drawStyle": "line",
                        "lineInterpolation": "smooth",
                        "fillOpacity": 20,
                        "spanNulls": false,
                        "scaleDistribution": {
                            "type": "linear"
                        }
                    },
                    "unit": "msgs/s"
                }
            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 19
            },
            "targets": [
                {
                    "expr": "sum by (subject) (rate(publisher_metrics_messages_throughput{subject=~\"$subject\"}[5m]))",
                    "legendFormat": "{{subject}}"
                }
            ],
            "title": "Message Rate by Subject [5m]",
            "description": "Number of messages published per second by subject",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "{{ .context.prometheusDataSource }}"
            },
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "axisLabel": "Bytes",
                        "drawStyle": "line",
                        "lineInterpolation": "smooth",
                        "fillOpacity": 20,
                        "spanNulls": false,
                        "scaleDistribution": {
                            "type": "linear"
                        }
                    },
                    "unit": "bytes"
                }
            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 19
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum by (le, subject) (rate(publisher_metrics_message_size_bytes_bucket{subject=~\"$subject\"}[5m])))",
                    "legendFormat": "p95 - {{subject}}"
                },
                {
                    "expr": "histogram_quantile(0.50, sum by (le, subject) (rate(publisher_metrics_message_size_bytes_bucket{subject=~\"$subject\"}[5m])))",
                    "legendFormat": "p50 - {{subject}}"
                }
            ],
            "title": "Message Size Distribution [5m]",
            "description": "50th and 95th percentile of message sizes in bytes",
            "type": "timeseries"
        },
        {
            "collapsed": false,
            "gridPos": {
                "h": 1,
                "w": 24,
                "x": 0,
                "y": 27
            },
            "title": "Error Metrics",
            "type": "row"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "{{ .context.prometheusDataSource }}"
            },
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "axisLabel": "Errors/sec",
                        "drawStyle": "line",
                        "lineInterpolation": "smooth",
                        "fillOpacity": 20,
                        "spanNulls": false,
                        "scaleDistribution": {
                            "type": "linear"
                        }
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "red",
                                "value": 1
                            }
                        ]
                    },
                    "unit": "errors/s"
                }
            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 28
            },
            "targets": [
                {
                    "expr": "sum by (subject, error_type) (rate(publisher_metrics_error_rates{subject=~\"$subject\"}[5m]))",
                    "legendFormat": "{{subject}} - {{error_type}}"
                }
            ],
            "title": "Error Rate by Type [5m]",
            "description": "Number of errors per second by subject and error type",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "{{ .context.prometheusDataSource }}"
            },
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "axisLabel": "Success Rate %",
                        "drawStyle": "line",
                        "lineInterpolation": "smooth",
                        "fillOpacity": 20,
                        "spanNulls": false,
                        "scaleDistribution": {
                            "type": "linear"
                        },
                        "max": 100,
                        "min": 0
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "red",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 95
                            },
                            {
                                "color": "green",
                                "value": 99
                            }
                        ]
                    },
                    "unit": "percent"
                }
            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 28
            },
            "targets": [
                {
                    "expr": "100 * (1 - (sum(rate(publisher_metrics_error_rates[5m])) / sum(rate(publisher_metrics_messages_throughput[5m]))))",
                    "legendFormat": "Success Rate"
                }
            ],
            "title": "Message Success Rate [5m]",
            "description": "Percentage of successfully published messages",
            "type": "timeseries"
        }
    ],
    "templating": {
        "list": [
            {
                "current": {
                    "selected": false,
                    "text": "All",
                    "value": "$__all"
                },
                "datasource": {
                    "type": "prometheus",
                    "uid": "{{ .context.prometheusDataSource }}"
                },
                "definition": "label_values(container_cpu_usage_seconds_total{container=\"publisher\"}, pod)",
                "hide": 0,
                "includeAll": true,
                "name": "pod",
                "query": "label_values(container_cpu_usage_seconds_total{container=\"publisher\"}, pod)",
                "refresh": 2,
                "regex": "",
                "skipUrlSync": false,
                "sort": 1,
                "type": "query"
            },
            {
                "current": {
                    "selected": false,
                    "text": "All",
                    "value": "$__all"
                },
                "datasource": {
                    "type": "prometheus",
                    "uid": "{{ .context.prometheusDataSource }}"
                },
                "definition": "label_values(publisher_metrics_messages_throughput, subject)",
                "hide": 0,
                "includeAll": true,
                "name": "subject",
                "query": "label_values(publisher_metrics_messages_throughput, subject)",
                "refresh": 2,
                "regex": "",
                "skipUrlSync": false,
                "sort": 1,
                "type": "query"
            }
        ]
    },
    "time": {
        "from": "now-6h",
        "to": "now"
    },
    "timepicker": {
        "refresh_intervals": [
