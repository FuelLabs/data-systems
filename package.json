{
  "name": "data-systems",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prettier:fix": "prettier --write \"**/*.@(json|md|sh|toml)\"",
    "prettier:validate": "prettier --check \"**/*.@(json|md|sh|toml)\""
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "commitlint": "^19.4.0",
    "prettier": "^3.3.3",
    "prettier-plugin-sh": "^0.14.0",
    "prettier-plugin-toml": "^2.0.1"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-sh",
      "prettier-plugin-toml"
    ],
    "singleQuote": false,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        "Infinity"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "test"
        ]
      ],
      "subject-case": [
        2,
        "always",
        [
          "sentence-case",
          "lower-case"
        ]
      ]
    }
  }
}
